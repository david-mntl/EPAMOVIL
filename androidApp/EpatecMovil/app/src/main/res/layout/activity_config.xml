<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epatec.epatecmovil.configActivity"
    android:background="#b8b4b4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Configuración General"
                android:id="@+id/textView24" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/saveButton"
                android:background="@drawable/save" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Acceso a DB"
                android:id="@+id/textView23"
                android:textSize="25dp"
                android:layout_gravity="top|center_vertical"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Configuración IP Local"
                android:id="@+id/textView25"
                android:textSize="25dp"
                android:layout_gravity="top|center_vertical"
                android:layout_row="1"
                android:layout_column="0" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ip_switch"
                android:gravity="right"
                android:layout_gravity="top|center_vertical"
                android:layout_row="1"
                android:layout_column="2" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/database_switch"
                android:gravity="right"
                android:layout_gravity="top|center_vertical"
                android:layout_row="0"
                android:layout_column="2" />

            <EditText
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:inputType="number|numberDecimal"
                android:digits="0123456789."
                android:ems="10"
                android:id="@+id/txt_ip"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="top|center_vertical"
                android:background="#e6dcdc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Frecuencia de"
                android:id="@+id/textView29"
                android:textSize="25dp"
                android:layout_gravity="top|center_vertical"
                android:layout_row="3"
                android:layout_column="0" />

            <EditText
                android:layout_width="260dp"
                android:layout_height="35dp"
                android:inputType="number|numberDecimal"
                android:digits="0123456789."
                android:ems="10"
                android:id="@+id/txt_frequency"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="top|center_vertical"
                android:background="#e6dcdc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sincronización"
                android:id="@+id/textView30"
                android:textSize="25dp"
                android:layout_gravity="top|center_vertical"
                android:layout_row="4"
                android:layout_column="0" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/frequency_switch"
                android:gravity="right"
                android:layout_gravity="top|center_vertical"
                android:layout_row="5"
                android:layout_column="2" />

        </GridLayout>
    </LinearLayout>
</RelativeLayout>
