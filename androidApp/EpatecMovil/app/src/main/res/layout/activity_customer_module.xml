<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.epatec.epatecmovil.customer_module"
    android:background="#aac2c5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seleccione una opciÃ³n"
        android:id="@+id/textView17"
        android:layout_gravity="top|center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/user_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/user" />

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/edit_user_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/user_edit" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txt_clientID"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:hint="ID de Cliente" />
    </LinearLayout>
</RelativeLayout>
